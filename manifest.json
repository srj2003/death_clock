{
    "manifest_version": 3,
    "name": "Death Clock New Tab",
    "version": "1.0",
    "description": "A productivity-focused new tab page with a unique death clock visualization",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "chrome_url_overrides": {
      "newtab": "newtab/index.html"
    },
    "permissions": [
      "storage"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }